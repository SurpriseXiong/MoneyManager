<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFEBCC"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/head_icon"
            android:src="@drawable/bt_food" />

        <EditText
            android:id="@+id/zhichu_money"
             android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@null"
            android:gravity="end"
            android:hint="0"
            android:paddingRight="4dp"
            android:textColor="#000"
            android:textColorHint="#000" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridview_zhichu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:numColumns="4"
        android:background="#fff" >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#dbdbdb"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shouru_zc_zijn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="3.48"
                android:src="@drawable/ft_wangluochongzhi1" />

            <TextView
                 android:id="@+id/shouru_zc_zijn1"
                android:layout_weight="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="支付宝" />

            <RelativeLayout
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                 android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/rili_zhichu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_calender" />

                <TextView
                     android:id="@+id/rili_zhichu_day"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2" >
            <TextView
                android:id="@+id/zhichu_signgridview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="0"
                android:textColor="#0000" />

            <ImageView
                 android:id="@+id/zhichu_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/oval_bg"
                android:src="@drawable/ic_ok" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>