<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:text="我的账户" />

    <LinearLayout
        android:id="@+id/lr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="结余 ：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:id="@+id/zijin_sum"
            android:text="0" />

        <Button
            android:id="@+id/zijin_zhuangzhang"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/shapebutton3"
            
            android:text="转账"
            android:textColor="#62DE10" />
    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/zijin_listview"
        android:layout_below="@+id/lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ziji_addteye" >

    </ListView>

    <LinearLayout
        android:id="@+id/ziji_addteye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="1dp"
        android:background="#ccc" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#fff"
            android:src="@drawable/ic_add" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#fff"
            android:gravity="center_vertical"
            android:text="添加资金账户"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>